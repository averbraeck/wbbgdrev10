<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config" status="FATAL">
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="org.apache.log4j.xml" level="FATAL" />
    <Root level="FATAL"> <!-- change to INFO later -->
      <AppenderRef ref="STDOUT" />
    </Root>
  </Loggers>
</Configuration>